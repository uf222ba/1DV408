{% extends "base.twig" %}
{% block content %}

    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Träningspass
                <small>Lägg till</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Startsida</a></li>
                <li><a href="#">Lägg till</a></li>
                <li class="active">Träningspass</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
        <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Lägg till nytt träningspass</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="?page=sessionnotes&action=new&id=0" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Datum och tid: {{ errordate }}</label>
                            <input type="text" class="form-control" name="date" placeholder="yyyy-mm-dd hh:mm"/>
                        </div>
                        <div class="form-group">
                            <label>Plats: {{ errorlocation }}</label>
                            <input type="text" class="form-control" name="location" placeholder="Träningsplats"/>
                        </div>
                        <!-- checkbox -->
                        <div class="form-group">
                            <label>Välj moment: {{ errorsession }}</label>
                            {% for e in exercises %}
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="exercises[]" value="{{ e['momentid'] }}" />
                                    {{ e['momentnamn'] }}
                                </label>
                            </div>
                            {% endfor %}
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Nästa >></button>
                    </div>
                </form>
            </div><!-- /.box -->


        </div><!--/.col (right) -->
        </div>   <!-- /.row -->
        </section><!-- /.content -->


    </aside><!-- /.right-side -->

{% endblock %}